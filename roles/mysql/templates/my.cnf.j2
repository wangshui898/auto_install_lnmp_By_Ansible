[client]
port		= {{ mysql_port }}
socket		= /tmp/mysql.sock
default-character-set = utf8mb4

[mysqld]
user = mysql
port = {{ mysql_port }}
socket = /tmp/mysql.sock
character-set-server = utf8mb4

basedir = {{ mysql_install_dir }}
datadir = {{ mysql_data_dir }}/data
log-error = {{ mysql_data_dir }}/logs/error.log
pid-file = {{ mysql_data_dir }}/mysql.pid
#log = {{ mysql_data_dir }}/logs/mysql.log
#general-log=1
#general-log-file = {{ mysql_data_dir }}logs/mysql.log


slow_query_log = ON
long_query_time = 2
slow_query_log_file = {{ mysql_data_dir }}/logs/slow.log


log-bin = {{ mysql_data_dir }}/binlog/mysql-binlog
binlog_format=mixed



back_log = 50
max_connections = 1024
max_connect_errors = 10
table_open_cache = 2048
max_allowed_packet = 16M
binlog_cache_size = 1M
max_heap_table_size = 64M
read_buffer_size = 2M
read_rnd_buffer_size = 16M
sort_buffer_size = 8M
join_buffer_size = 8M
thread_cache_size = 8


default-storage-engine = INNODB
thread_stack = 192K
transaction_isolation = REPEATABLE-READ
tmp_table_size = 256M


server-id = 1

key_buffer_size = 512M
bulk_insert_buffer_size = 64M
myisam_sort_buffer_size = 128M
myisam_max_sort_file_size = 10G
myisam_repair_threads = 1

innodb_buffer_pool_size = 2G
innodb_data_file_path = ibdata1:10M:autoextend
innodb_write_io_threads = 8
innodb_read_io_threads = 8
innodb_thread_concurrency = 16
innodb_flush_log_at_trx_commit = 1

innodb_log_buffer_size = 8M
innodb_log_file_size = 256M
innodb_log_files_in_group = 3
innodb_max_dirty_pages_pct = 90
innodb_lock_wait_timeout = 120

explicit_defaults_for_timestamp=true
[mysqldump]
quick
max_allowed_packet = 16M

[mysql]
no-auto-rehash

[myisamchk]
key_buffer_size = 512M
sort_buffer_size = 512M
read_buffer = 8M
write_buffer = 8M

[mysqlhotcopy]
interactive-timeout

[mysqld_safe]
open-files-limit = 8192

